@model Category
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Category</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input class="form-control" asp-for="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsMain">IsMain</label>
                        <input class="form-control" asp-for="IsMain">
                    </div>
                    <div class="form-group d-none" id="photoInput">
                        <label asp-for="Photo">Photo</label>
                        <input class="form-control" asp-for="Photo" accept="image/*">
                    </div>
                    <div class="form-group" id="parentCategoryInput">
                        <label>Parent</label>
                        <select class="form-control" name="parentCategoryId">
                            <option value="0">--Select Category--</option>
                            @foreach (var item in ViewBag.ParentCategories)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

